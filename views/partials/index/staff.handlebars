<link rel="stylesheet" href="/css/{{default "style"}}/index/staff.css">

<!-- ======= staff Section ======= -->
<section id="staff">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <h2>
                <i class="fa fa-users" aria-hidden="true"></i>

                {{texts "staff"}}
            </h2>
            <p>{{texts "staff_description"}}</p>
        </div>

        <div class="row">
            {{#each staff}}
            <div class="col-lg-4 col-md-6 justify-content-center">
                <div class="co-staff" data-aos="fade-up" data-aos-delay="100">
                    <img src="/uploads/{{image}}" alt="co-staff {{id}}" class="img-fluid">
                    <div class="details">
                        <h3><a href="co-staff-details.html">{{name}}</a></h3>
                        <p>{{position}}</p>
                        <div class="social">
                            <a href="{{twitter}}"><i class="fa fa-twitter"></i></a>
                            <a href="{{facebook}}"><i class="fa fa-facebook"></i></a>
                            <a href="mailto:{{email}}"><i class="fa fa-email"></i></a>
                            <a href="{{instagram}}"><i class="fa fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</section><!-- End staff Section -->