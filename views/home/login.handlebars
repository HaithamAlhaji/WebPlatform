<form class="login100-form validate-form" method="POST" action="./login">

    {{#if error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">

        <strong>{{texts "error"}}!</strong>
        <br />
        {{error}}
    </div>
    {{/if}}

    {{#if eventTitle}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">

        <strong>{{caption}}!</strong>
        <br />
        {{eventTitle}}
    </div>
    {{/if}}
    <span class="login100-form-title">
        {{texts "login_page"}}
    </span>

    <div class="wrap-input100 validate-input" data-validate="{{texts "email_vaild"}}">

        <input class="input100" type="email" name="txtEmail" id="txtEmail" placeholder="{{texts "email"}}"
            maxlength="50">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>

    <div class="wrap-input100 validate-input" data-validate="{{texts "password_required"}}">
        <input class="input100" type="password" name="txtPassword" id="txtPassword" placeholder="{{texts "password"}}"
            maxlength="32">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            {{texts "login"}}

        </button>
    </div>

    <div class="text-center p-t-12">
        <span class="txt1">
            {{texts "forget"}}
        </span>
        <a class="txt2" href="./forgetPassword">
            {{texts "password"}}
        </a>
    </div>

    <div class="text-center p-t-50 ">
        <a class="txt2 login100-form-btn" href="./register">
            <i class="fa fa-plus-circle fa-fw fa-2x" aria-hidden="true"></i>

            {{texts "create_account"}}

        </a>
    </div>
</form>