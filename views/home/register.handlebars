<form class="login100-form validate-form" method="POST" action="./register">

    {{#if error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">

        <strong>{{texts "error"}}!</strong>
        <br />
        {{error}}
    </div>
    {{/if}}

    <span class="login100-form-title">
        {{texts "register_page"}}
    </span>

    <div class="wrap-input100 validate-input" data-validate="{{texts "email_vaild"}}">

        <input class="input100" type="email" name="txtEmail" id="txtEmail" placeholder="{{texts "email"}}"
            maxlength="50">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>

    <div class="wrap-input100 validate-input" data-validate="{{texts "password_required"}}">
        <input class="input100" type="password" name="txtPassword" id="txtPassword" placeholder="{{texts "password"}}"
            maxlength="32">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>

    <div class="wrap-input100 validate-input" data-validate="{{texts "password_match_required"}}">
        <input class="input100" type="password" name="txtPasswordConfirmation" id="txtPasswordConfirmation"
            placeholder="{{texts "password_confirmation"}}" maxlength="32" oninput="check(this)">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>
    <div class="wrap-input100 validate-input" data-validate="{{texts "name_en"}}">

        <input class="input100" type="text" name="txtNameEn" id="txtNameEn" placeholder="{{texts "name_en"}}"
            maxlength="50">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-user" aria-hidden="true"></i>
        </span>
    </div>
    <div class="form-check">
        <input class="form-check-input .big-checkbox" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="defaultCheck1">
            {{texts "policies_agreement"}}
        </label>
    </div>
    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            <i class="fa fa-plus-circle fa-fw fa-2x" aria-hidden="true"></i>
            {{texts "regsiter"}}

        </button>
    </div>

