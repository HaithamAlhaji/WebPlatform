<form class="login100-form validate-form" method="POST" action="./forgetPassword">

    {{#if errors}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">

        <br />
        {{errors}}
    </div>
    {{/if}}


    <span class="login100-form-title">
        {{texts "forget_password"}}
    </span>

    <div class="wrap-input100 validate-input" data-validate="{{texts "email_vaild"}}">

        <input class="input100" type="email" name="txtEmail" id="txtEmail" placeholder="{{texts "email"}}"
            maxlength="50">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>



    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            {{texts "forget_password"}}

        </button>
    </div>


</form>